                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="25,0,14,0.333">
                        <Label Content="Cost:" Style="{StaticResource Label_Main}"/>
                        <TextBox Style="{StaticResource TextBox_Main}" Text="{Binding SelectedLocation.ModifyCash}"/>
                        <Button x:Name="Button_TravelGo" Content="GO" Style="{StaticResource Button_Main}" Height="30" Width="40" Margin="10,0,10,0" Click="Button_TravelGo_Click" />
                    </StackPanel>

                    <Label Grid.Row="2" Content="Area Info:" Style="{StaticResource Label_Main}" Grid.ColumnSpan="2"/>

                    <TextBox Text="{Binding SelectedLocation.Description}" Grid.Row="3" Style="{StaticResource TextBox_Main}" Height="100" Width="240" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="2" Margin="9,1,9.667,1.667"/>

                </Grid>
            </Border>

            <Border x:Name="Border_Actions" Grid.Row="1" Grid.Column="1" Style="{StaticResource Border_Main}" Margin="0,0,0,5" BorderThickness=".5,0,.5,.5">
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="StackPanel_Actions_Example" Orientation="Vertical" Visibility="Hidden">
                        <Button Content="Action" Style="{StaticResource Button_Main}"/>
                        <Button Content="Related" Style="{StaticResource Button_Main}"/>
                        <Button Content="Buttons" Style="{StaticResource Button_Main}"/>
                        <Button Content="Here" Style="{StaticResource Button_Main}"/>
                    </StackPanel>

                    <StackPanel x:Name="StackPanel_Actions_Assets" Orientation="Vertical" HorizontalAlignment="Center" Margin="0" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Label Content="Asset Types:" Style="{StaticResource Label_Main}" Margin="2"/>
                            <ComboBox
                                x:Name="ComboBox_LocationAssetTypes"
                                Style="{StaticResource ComboBox_AssetTypes}"
                                Margin="0" 
                                Height="30"
                                Width="120"
                                Opacity=".75"
                                FontWeight="Medium"
                                FontSize="14"             
                                HorizontalAlignment="Center"
                                VerticalContentAlignment="Center" SelectionChanged="ComboBox_LocationAssetTypes_SelectionChanged" 
                                >
                                        <!--<ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>-->
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Asset Name:" Style="{StaticResource Label_Main}" Margin="2,0,0,0" Width="90"/>
                            <ComboBox
                                x:Name="ComboBox_LocationAssetName"
                                Style="{StaticResource ComboBox_AssetTypes}"
                                SelectedItem=""
                                Margin="0,0,0,0" 
                                Height="30"
                                Width="160"
                                Opacity=".75"
                                FontWeight="Medium"
                                FontSize="12"             
                                HorizontalAlignment="Center" SelectionChanged="ComboBox_LocationAssetName_SelectionChanged"
                                >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <Label Content="Asset Price:" Style="{StaticResource Label_Main}"/>
                            <TextBox x:Name="TextBox_Actions_Assets_Price" Style="{StaticResource TextBox_Main}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                            <Button x:Name="Button_Actions_Assets_SeeDetails" Content="See Details" Style="{StaticResource Button_Main}" Click="Button_Actions_Assets_SeeDetails_Click"/>
                            <Button x:Name="Button_Actions_Assets_Buy" Content="Buy" Style="{StaticResource Button_Main}" Click="Button_Actions_Assets_Buy_Click"/>
                        </StackPanel>


                    </StackPanel>

                    <StackPanel x:Name="StackPanel_Actions_Debt" Orientation="Vertical" HorizontalAlignment="Center" Margin="0" Visibility="Visible">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                            <Label Content="Loans Paid In:" Style="{StaticResource Label_Main}" HorizontalAlignment="Center"/>
                            <TextBox x:Name="TextBox_Actions_Debt_Years" Style="{StaticResource TextBox_Main}" Width="30" HorizontalContentAlignment="Center" Padding="1"/>
                            <Label Content="year(s)" Style="{StaticResource Label_Main}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Label Content="25 years" Style="{StaticResource Label_Main}" FontSize="13"/>
                            <Slider x:Name="Slider_Actions_Debt_LoanPayments"  Foreground="Green" Margin="2,4,2,0" Width="150"
                                    Minimum="1" Maximum="25" Value="25"
                                    IsDirectionReversed="True"
                                    IsSnapToTickEnabled="True" TickFrequency="1" TickPlacement="Both" ValueChanged="Slider_Actions_Debt_LoanPayments_ValueChanged">
                            
                            </Slider>
                            <Label Content="1 year" Style="{StaticResource Label_Main}" FontSize="13"/>
                        </StackPanel>
                        <!--<Label x:Name="Label_Action_Debt_Factor" Style="{StaticResource Label_Main}"/>-->
                        <Grid Margin="0,5,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Original Debt:" Style="{StaticResource Label_Main}" FontSize="12" HorizontalAlignment="Right" Margin="0"/>
                            <TextBox x:Name="TextBox_Actions_Debt_OriginalDebt" Grid.Row="0" Grid.Column="1" Text="{Binding PlayerOriginalDebt}" Style="{StaticResource TextBox_Main}" Width="70" Height="25" HorizontalAlignment="Left"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Loan Weekly Payment:" Style="{StaticResource Label_Main}" FontSize="12" HorizontalAlignment="Right" Margin="0"/>
                            <TextBox x:Name="TextBox_Actions_Debt_WeeklyPayment" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBox_Main}" Width="70" Height="25" HorizontalAlignment="Left"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Remaining Debt:" Style="{StaticResource Label_Main}" FontSize="12" HorizontalAlignment="Right" Margin="0"/>
                            <TextBox x:Name="TextBox_Actions_Debt_RemainingDebt" Grid.Row="2" Grid.Column="1" Text="{Binding Player.Debt}" Style="{StaticResource TextBox_Main}" Width="70" Height="25" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel x:Name="StackPanel_Actions_Loans" Orientation="Vertical" HorizontalAlignment="Center" Margin="5" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="Amount:" Style="{StaticResource Label_Main}"/>
                            <TextBox x:Name="TextBox_Actions_Loans_LoanAmount" Style="{StaticResource TextBox_Main}" IsReadOnly="False" Width="82" TextChanged="TextBox_Actions_Loans_LoanAmount_TextChanged" />
                            <Label Content="Lifetime:" Style="{StaticResource Label_Main}"/>
                            <TextBox x:Name="TextBox_Actions_Loans_LoanLifetime" Text="{Binding ElementName=Slider_Actions_Loans_LoanLifetime,Path=Value}" Style="{StaticResource TextBox_Main}" Width="35" TextChanged="TextBox_Actions_Loans_LoanLifetime_TextChanged"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <Label Content="25 years" Style="{StaticResource Label_Main}" FontSize="13"/>
                            <Slider x:Name="Slider_Actions_Loans_LoanLifetime"  Foreground="Green" Margin="2,4,2,0" Width="150"
                                    Minimum="1" Maximum="25" Value="25"
                                    IsDirectionReversed="True"
                                    IsSnapToTickEnabled="True" TickFrequency="1" TickPlacement="Both">

                            </Slider>
                            <Label Content="1 year" Style="{StaticResource Label_Main}" FontSize="13" Margin="0,0,5,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <Label Content="APR:" Style="{StaticResource Label_Main}"/>
                            <TextBox Text="{Binding LoanTemplate.APR}" Style="{StaticResource TextBox_Main}" Width="35" Padding="2"/>
                            <Label Content="Weekly Payment:" Style="{StaticResource Label_Main}"/>
                            <TextBox x:Name="TextBox_Actions_Loans_WeeklyPayment" Style="{StaticResource TextBox_Main}" Width="50"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                            <Label Content="Total Loan Cost:" Style="{StaticResource Label_Main}"/>
                            <TextBox x:Name="TextBox_Actions_Loans_TotalLoanCost" Style="{StaticResource TextBox_Main}" Width="70"/>
                            <Button x:Name="Button_Actions_Loans_Apply" Content="Apply" Style="{StaticResource Button_Main}" Width="60" Margin="10,0,10,0" Click="Button_Actions_Loans_Apply_Click" />
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="1" Style="{StaticResource Border_Main}" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource Border_Main}" VerticalAlignment="Top" BorderThickness="1" Width="45" Height="20" Margin="2">
                                <Label Content=" TIME: " Style="{StaticResource Label_Main}" FontWeight="Bold" FontSize="12" Padding="2"/>
                            </Border>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="Button_Time_Start" Content="Start" Style="{StaticResource Button_Main}" Width="90" Click="Button_Time_Start_Click"/>
                                <Button x:Name="Button_Time_Pause" Content="Pause" Style="{StaticResource Button_Main}" Width="90" Click="Button_Time_Pause_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>


                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Border_Main}" Margin="0,0,5,5" BorderThickness=".5,0,.5,.5">
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Asset Name:" Style="{StaticResource Label_Main}" Margin="0"/>
                            <ComboBox
                                x:Name="ComboBox_AssetName"
                                Style="{StaticResource ComboBox_AssetTypes}"
                                SelectedItem=""
                                Margin="0,0,0,0" 
                                Height="30"
                                Width="160"
                                Opacity=".75"
                                FontWeight="Medium"
                                FontSize="12"             
                                HorizontalAlignment="Center" SelectionChanged="ComboBox_AssetName_SelectionChanged"
                                >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label Content="Current Asset Value:" Style="{StaticResource Label_Main}"/>
                            <TextBox x:Name="TextBox_AssetsOwned_CurrentValue" Style="{StaticResource TextBox_Main}" Width="112"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button x:Name="Button_AssetsOwned_SeeDetails" Content="See Details" Style="{StaticResource Button_Main}" Click="Button_AssetsOwned_SeeDetails_Click"/>
                            <Button x:Name="Button_AssetsOwned_Sell" Content="Sell" Style="{StaticResource Button_Main}" Click="Button_AssetsOwned_Sell_Click"/>

                        </StackPanel>

                        <!--<TextBox x:Name="TextBox_AssetInfo" Style="{StaticResource TextBox_Main}" Height="75" Width="240" TextWrapping="Wrap" FontSize="11" ScrollViewer.VerticalScrollBarVisibility="Auto"/>-->
                    </StackPanel>


                    <Border Grid.Row="1" Style="{StaticResource Border_Main}" Margin="0">
                        <Grid>                     
                            <Grid x:Name="Grid_YearsWeeksPassed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="Years Passed: " Style="{StaticResource Label_Main}" HorizontalAlignment="Right"/>
                                <Label Grid.Row="1" Grid.Column="0" Content="Weeks Passed (This Year): " Style="{StaticResource Label_Main}" HorizontalAlignment="Right"/>
                                <Label Grid.Row="2" Grid.Column="0" Content="Years To Retirement: " Style="{StaticResource Label_Main}" HorizontalAlignment="Right"/>

                                <TextBox x:Name="TextBox_YearsPassed" Grid.Row="0" Grid.Column="1" Text="{Binding YearsPassed}" Style="{StaticResource TextBox_Main}" Height="20" Width="50" />
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding GameTimeDisplay}" Style="{StaticResource TextBox_Main}" Height="20" Width="50" TextChanged="TextBox_TextChanged"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBox_Main}" Height="20" Width="50"/>

                            </Grid>
                            
                            <Label x:Name="Label_YearsWeeksPassed_Paused" Content="Paused" Style="{StaticResource Label_Main}" FontSize="50" HorizontalAlignment="Center" FontWeight="Normal" Visibility="Hidden"/>
                            
                        </Grid>                        
                    </Border>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
